.regnew
  .regnew__container
    .regnew__container__box
      .regnew_container__box__symbol
        %a.image
        = link_to image_tag("logo.png", size: '185x50'), root_path

.main
  .main__container
    .main__container__title
      ログインページだよ！！！
    = form_for resource, as: resource_name, url: user_session_path, class: "main__container__form" do |f|
      .main__container__form__fields
        .main__container__form__fields__field
          .category
            %label(for="")
              メールアドレス
            
            .input-defaults
              = f.email_field :email, placeholder: "", class: "input-defaults__default"
        .main__container__form__fields__field
          .category
            %label(for="")
              パスワード
            
            .input-defaults
              = f.password_field :password, placeholder: "", class: "input-defaults__default"      
        .main__container__form__fields__field
          .category
            %label(for="")
              パスワード(確認)

            .input-defaults
              = f.password_field :password_confirmation, placeholder: "", class: "input-defaults__default" 
          %span.form-info-text
            
        
            %br 
          .main__container__form__fields__field    
            .main__container__form__fields__field__select
              
            .main__container__form__fields__field__select
              
            = f.submit "次へ進む", class:"main__container__form__fields__field__submit"
              
            .main__container__form__fields__field__select
              .main__container__form__fields__field__select__reg
                本人情報の登録について
                %i.fas.fa-chevron-right
.single
  .single__footer
    .single__footer__nav
      .single__footer__nav__con
