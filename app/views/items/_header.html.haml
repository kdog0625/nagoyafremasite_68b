.header-wrapper
  .header
    .header__box
      .header__box__upper
        .header__box__upper__title
          = link_to image_tag("logo.png", size: '140x40'), root_path
        .header__box__upper__form
          .header__box__upper__form__field
            = form_tag(root_path, local: true, method: :get) do |f|
              = text_field_tag :keyword, "", class: 'top.header__box__upper__form__field', placeholder: 'キーワードから探す'
              .header__box__upper__form__field__point
                = button_tag type: 'submit', name: nil do
                  .header__box__upper__form__field__point__button
                    = image_tag("icon-search 1.png", size: '19x19')
          .header__box__upper__form__icon
      .header__box__below
        .header__box__below__search
          .header__box__below__search__category             
            = link_to "カテゴリー"             
            = link_to "ブランド"
        .header__box__below__users
          .header__box__below__users__member
            .header__box__below__users__member__left
            .header__box__below__users__member__right
              = link_to "ログイン", root_path, class: "member_right"
            = link_to "新規会員登録", root_path, class: "newreg"
            
  .exhibition
    %a出品する
    %i.fas.fa-camera