.header-wrapper
  .header
    .header__box
      .header__box__upper
        .header__box__upper__title
          = link_to image_tag("logo.png", size: '140x40'), root_path
        .header__box__upper__form
          .header__box__upper__form__field
            = form_tag(root_path) do
              = text_field_tag :keyword, "", class: 'header__box__upper__form__field', placeholder: 'キーワードから探す'
              .header__box__upper__form__field__point
                = button_tag type: 'submit' do
                  .header__box__upper__form__field__point__button
                    = image_tag("icon-search 1.png", size: '19x19')